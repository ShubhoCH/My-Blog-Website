<%- include("partials/header.ejs") -%>
<h1>Home</h1>
<p><%= startingContent %></p>
<% newPosts.forEach(function(post){ %>
    <div>
        <h1> <%= post.title   %> </h1>
        <% if(post.content.length > 100){ %>
            <p>  
                <%= post.content.substr(0,100) + "..." %> 
                <a href="/posts/<%= post.title %>">Read more</a> 
            </p>  
        <% }else{ %>
            <p>  
                <%= post.content %> 
                <a href="/posts/<%= post.title %>">Read more</a> 
            </p>  
        <% } %>
    </div>
<% } )  %>
<%- include("partials/footer.ejs") -%>